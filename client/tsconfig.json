{
   "files": [],
   "references": [
      { "path": "./tsconfig.app.json" },
      { "path": "./tsconfig.node.json" }
   ],
   "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true, // Ensure compatibility with CommonJS modules
      // "module": "commonjs", // Use CommonJS for Jest compatibility
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ES2019", // Target a compatible ECMAScript version
      "jsx": "react-jsx", // If you're using React
      "baseUrl": "./", // Set the base URL for module resolution
      "paths": {
         "@/*": ["src/*"] // Map @/ to the src/ directory
      }
   }
}
